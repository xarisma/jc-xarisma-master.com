{% extends 'XarismaBundle:Default:base.html.twig' %}

{% block body -%}
    <h1>User Details</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
{#            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>#}
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <th>Accesslevel</th>
                <td>{{ entity.accesslevel }}</td>
            </tr>
{#            <tr>
                <th>Roles</th>
                <td>{{ entity.roles }}</td>
            </tr>#}
            <tr>
                <th>Updateby</th>
                <td>{{ entity.updateby }}</td>
            </tr>
                
            <tr>
                <th>Created</th>
                {% if entity.datecreated.timestamp is defined %}
                    <td>{{ entity.datecreated|date('Y-m-d H:i:s') }}</td>
                {% else %}
                    <td>Null</td>  
                {% endif %}
            </tr>
            <tr>
                <th>Updated</th>
                {% if entity.dateupdated.timestamp is defined %}
                    <td>{{ entity.dateupdated|date('Y-m-d H:i:s') }}</td>
                {% else %}
                    <td>Null</td>  
                {% endif %}
            </tr>
            
            <tr>
                <th>Deleted</th>
                <td>{{ entity.deleted }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
